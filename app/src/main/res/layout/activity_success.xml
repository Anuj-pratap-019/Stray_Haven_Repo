<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/success_container"
        android:layout_width="337dp"
        android:layout_height="357dp"
        android:layout_centerInParent="true"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:padding="0dp">

        <TextView
            android:id="@+id/success_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="@string/success_title"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/circle_container"
            android:layout_width="88dp"
            android:layout_height="81dp"
            android:layout_below="@id/success_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/circle_background">

            <ImageView
                android:id="@+id/check_icon"
                android:layout_width="50dp"
                android:layout_height="42dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_check_white" />
        </RelativeLayout>

        <TextView
            android:id="@+id/success_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/circle_container"
            android:layout_marginStart="16dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text="@string/success_message"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <View
            android:id="@+id/teal_line"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@color/teal_green" />
    </RelativeLayout>

    <TextView
        android:id="@+id/back_to_home"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/success_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/box_border_background"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="@string/back_to_home"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:gravity="center" />
</RelativeLayout>
